<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="#0000FFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_arrow_back_24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/change_photo"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:src="@drawable/unknown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="191dp"
                android:layout_marginBottom="18dp"
                android:text="Personal Detail"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:drawableStart="@drawable/baseline_edit_24"
                    android:hint="  Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputName"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_person_24" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:drawableStart="@drawable/baseline_edit_24"
                    android:hint="  E-mail">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputMail"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_email_24"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:drawableStart="@drawable/baseline_edit_24"
                    android:hint="  Phone Number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputPhone"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_phone_24"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="450dp"
                android:layout_marginBottom="18dp"
                android:text="Personal Description"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="470dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:drawableStart="@drawable/baseline_edit_24"
                    android:hint="  Something about yourself">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputDes"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_edit_24" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

<!--            <RelativeLayout-->
<!--                android:id="@+id/edu_layout"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/headline"-->
<!--                android:layout_marginTop="17dp">-->

<!--                <TextView-->
<!--                    android:id="@+id/edu_text"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="25dp"-->
<!--                    android:layout_marginBottom="18dp"-->
<!--                    android:text="Education Level"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="16sp" />-->

<!--                <Spinner-->
<!--                    android:layout_width="300dp"-->
<!--                    android:layout_height="48dp"-->
<!--                    android:layout_marginStart="25dp"-->
<!--                    android:layout_marginTop="20dp"-->
<!--                    android:orientation="horizontal" />-->

<!--            </RelativeLayout>-->

            <Button
                android:id="@+id/done_profile"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_below="@+id/headline"
                android:layout_marginStart="75dp"
                android:layout_marginTop="41dp"
                android:text="Done"
                android:textColor="@color/green"
                app:cornerRadius="20dp"
                app:strokeColor="@color/green" />

            <Button
                android:id="@+id/cancel_profile"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_below="@+id/headline"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="41dp"
                android:text="Cancel"
                android:textColor="@color/red"
                app:cornerRadius="20dp"
                app:strokeColor="@color/red" />


        </RelativeLayout>

    </ScrollView>
</layout>